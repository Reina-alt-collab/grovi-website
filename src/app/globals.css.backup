/* Mobile Viewport and Base Settings */
html {
  -webkit-text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;
  text-size-adjust: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  -webkit-overflow-scrolling: touch;
  -webkit-tap-highlight-color: transparent;
  touch-action: manipulation;
}

/* iOS Safari Specific Fixes */
@supports (-webkit-touch-callout: none) {
  /* Fix iOS Safari viewport height issue */
  .hero {
    min-height: -webkit-fill-available;
  }
  
  /* iOS Safari input zoom prevention */
  input, select, textarea {
    font-size: 16px !important;
  }
  
  /* iOS Safari Specific Fixes */
@supports (-webkit-touch-callout: none) {
  /* Fix iOS Safari viewport height issue */
  .hero {
    min-height: -webkit-fill-available;
  }
  
  /* iOS Safari input zoom prevention */
  input, select, textarea {
    font-size: 16px !important;
  }
  
  /* iOS Safari button styling - solo para botones con clases espec√≠ficas */
  .primaryButton,
  .secondaryButton,
  .mobileCalendlyButton,
  .acceptButton,
  .declineButton,
  .customizeButton {
    -webkit-appearance: none;
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
  }
  
  /* Para todos los botones - solo propiedades seguras */
  button {
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
  }
}

/* Touch Target Optimization */
button, a, [role="button"] {
  min-height: 44px;
  min-width: 44px;
  touch-action: manipulation;
  -webkit-tap-highlight-color: transparent;
}

/* Mobile Typography Improvements */
@media (max-width: 768px) {
  h1, h2, h3, h4, h5, h6 {
    line-height: 1.3;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
  
  p {
    line-height: 1.6;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
  
  /* Prevent horizontal scroll on mobile */
  body {
    overflow-x: hidden;
  }
  
  * {
    max-width: 100%;
  }
  
  /* Mobile-friendly form elements */
  input, textarea, select {
    font-size: 16px;
    border-radius: 8px;
    padding: 12px 16px;
    border: 2px solid #ddd;
    -webkit-appearance: none;
    appearance: none;
  }
  
  input:focus, textarea:focus, select:focus {
    outline: 2px solid #F07255;
    outline-offset: 2px;
    border-color: #F07255;
  }
}

/* Safe Area Insets for iPhone X and newer */
@supports (padding: max(0px)) {
  body {
    padding-left: max(12px, env(safe-area-inset-left));
    padding-right: max(12px, env(safe-area-inset-right));
  }
  
  .hero, .navigation {
    padding-left: max(0px, env(safe-area-inset-left));
    padding-right: max(0px, env(safe-area-inset-right));
  }
}

/* Smooth Scrolling for Better UX */
html {
  scroll-behavior: smooth;
}

/* Better Focus States for Accessibility */
*:focus {
  outline: 2px solid #F07255;
  outline-offset: 2px;
}

/* Reduced Motion for Accessibility */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
  
  .particle, .connection-line {
    animation: none !important;
  }
}